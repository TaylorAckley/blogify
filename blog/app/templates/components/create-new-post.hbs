<h3>Create a New Post!</h3>

<form id="NewPost">
    <p>
      {{input value=newPost.title placeholder="Title"}}
    </p>
    <p>
      {{input value=newPost.user placeholder="user"}}
    </p>
    <p>
      {{textarea value=newPost.body placeholder="Content" rows="10" cols="140"}}
    </p>
    <p>
        <button {{action 'createPost' newPost}}>Publish</button>
    </p>
</form>
{{yield}}
